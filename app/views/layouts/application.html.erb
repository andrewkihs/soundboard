<!DOCTYPE html>
<html>
  <head>
    <title>Soundboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta property="og:title" content="SoundBoard" />
     <meta property='og:image' content="<%= image_url('preview_picture.png') %>"/>
     <meta property="og:description"
       content="A pixel perfect clone of SoundCloud."
     />
     <meta property="og:url"
       content="https://soundboard-aa.herokuapp.com/#/"
     />

    <script type="text/javascript">
      window.logoURL = "<%= image_url('logo.jpeg') %>";
      window.landingImageURL0 = "<%= image_url('sc_landing0.jpeg') %>";
      window.landingImageURL1 = "<%= image_url('sc_landing1.jpeg') %>";
      window.creatorSplash = "<%= image_url('creator_splash.jpeg') %>";
    </script>
    <script src="https://unpkg.com/wavesurfer.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
